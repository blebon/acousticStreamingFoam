FoamFile
{
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

UCast    (0 0 -0.00233);
UInitial    (0 0 0);

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform $UCast;

boundaryField
{
    ram
    {
        type            fixedValue;
        value           uniform $UCast;
    }

    "(hot-top|sonotrode.*|fixed)"
    {
        type            noSlip;
    }

    "(graphite|mould|water-film)"
    {
        type            noSlip;
    }

    free-surface
    {
        type            zeroGradient;
    }

    symmetry
    {
        type            symmetry;
    }
}

